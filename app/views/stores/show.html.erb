<div class='row container show-container'>
  <div class="col s5 m5 show-left">
    <div id="store-show-image">
      <img src="http://www.rv-camping.org/wp-content/uploads/2015/06/BLMLogo.gif">
    </div>
  </div>

  <div class="col s6 m6 show-right"  >
    <h3 id="feature-title"><%= @store.title %></h2>
    <p id="feature-narrative">
      <%= @store.description %>
    </p>
    <p id="feature-details-dynamic">
      <p>
        Acreditted by:
      </p>
      <ul>
        <% @store.accreditations.each do |cred| %>
          <li><%= cred %></li>
        <% end %>
      </ul>

    </p>

  </div>
</div>

<div class="row" id="home-middle">
  <h4 class="text center">Our Top Sellers</h4><br>
  <% @top_sellers.each do |top_seller| %>
    <div class="col s4 m4 l4 center">
      <img src=<%= top_seller.image_url %> alt="" class="circle responsive-img" id="featured-circles">
      <p><%= top_seller.title %></p>
    </div>
  <% end %>
</div>

<div class="row"> <!-- Third section of page -->
  <div class="col s12 m12 l12">

    <div class="col s3 m3 l3">
      <div class="card center">
        <span class="card-title">Search Our Products</span>
        <div class="card-content">
          <ul>
            <li>Category</li>
            <li>Region</li>
            <li>Price</li>
          </ul>
        </div>
        <div class="card-action">
          <a href="#">Search</a>
        </div>
      </div>
    </div>

    <div class= 'col s9 m9 l9' id="item-index" >

      <% @items.each do |item| %>
        <div class="col s4 m4 l4" id=store_items_for_sale >
          <div class="card center medium">
            <img src=<%= item.image_url %> id="card-image"> <!-- replace with item image -->
            <br>
              <span class="card-title"><%= item.title %></span>
            <div class="card-content">
              <p><%= item.description %></p>
            </div>
          <div class="card-action">
            <%= link_to "Add To Cart", cart_items_path(item_id: item.id), method: :post %>
          </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
