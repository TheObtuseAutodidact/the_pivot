
    <div class = "container">
      <div class="col s12"  style="padding-top:10vh;">
        <div class="card white">
          <div class="card-content center">
            <h1> <%= @user.first_name %>'s Admin Dashboard</h1>
            <h2> Username: <%= @user.username %> </h2>
          </div>
        </div>
      </div>

    <div class="row">
        <div class="col s3">
          <div class="card white">
            <div class="card-content white-text center">
              <i class="large material-icons" style="color:black;">playlist_add</i>
            </div>
            <div class="card-action center-align  ">
              <a class="waves-effect waves-light btn-large">
                <%= button_to "Create An Item", new_admin_item_path, method: :get %>
              </a>
            </div>
          </div>
        </div>

        <div class="col s3">
          <div class="card white">
            <div class="card-content white-text center">
              <i class="large material-icons" style="color:black;">visibility</i>
            </div>
            <div class="card-action center-align  ">
              <a class="waves-effect waves-light btn-large">
                <%= button_to "View Orders", admin_orders_path, method: :get %>
              </a>
            </div>
          </div>
        </div>

        <div class="col s3">
          <div class="card white">
                      <div class="card-content white-text center">
              <i class="large material-icons" style="color:black;">shopping_cart</i>
            </div>
            <div class="card-action center">
              <a class="waves-effect waves-light btn-large">
                <%= button_to "View Cart", cart_path, method: :get %>
              </a>
            </div>
          </div>
        </div>

        <div class="col s3">
          <div class="card white">
                      <div class="card-content white-text center">
              <i class="large material-icons" style="color:black;">done_all</i>
            </div>
            <div class="card-action center">
              <a class="waves-effect waves-light btn-large">
                <%= button_to "Write a Review", reviews_path, method: :get %>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
